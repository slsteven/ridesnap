%header.navbar.navbar-inverse.navbar-fixed-top{role: 'navigation'}
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      = button_tag data: {target: '#top-collapse', toggle: 'collapse'}, class: 'navbar-toggle' do
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'RIDESNAP', root_path, class: 'navbar-brand'
    / Collect the nav links, forms, and other content for toggling
    #top-collapse.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li= link_to 'Home', root_url
        %li= link_to 'How it Works', how_url
        %li= link_to 'Get Started', start_url
        %li= link_to 'About Us', about_url
      %ul.nav.navbar-nav.navbar-right
        %li= link_to 'BECOME AN AGENT', agent_url, class: 'btn btn-purple navbar-btn btn-wide'