%h2.purple Here's what we found.
%p
  %span#selected-year
  %span#selected-make
  %span#selected-model
  \-
  %span#selected-style
  = link_to 'Edit', '#query', role: 'tab', data: {toggle: 'tab'}
%br
%br
.row
  .col-sm-4.col-xs-12.left
    %svg.circle.grey{viewBox:'0 0 100 100'}
      %circle{cx:'50', cy:'50', r:'49', 'stroke-width' => 1}
    .words
      %h4 Trade in
      %h2#trade-in-value
  .col-sm-4.col-xs-12.center
    %svg.circle.purple{viewBox:'0 0 100 100'}
      %circle{cx:'50', cy:'50', r:'49', 'stroke-width' => 1}
    .words
      %h4 RideSnap
      %h2#ridesnap-value
  .col-sm-4.col-xs-12.right
    %svg.circle.black{viewBox:'0 0 100 100'}
      %circle{cx:'50', cy:'50', r:'49', 'stroke-width' => 1}
    .words
      %h4 Buy it Now
      %h2#buy-it-now-value
%br
%br
= link_to 'New Quote', start_path, class: 'btn btn-default btn-wide'
= link_to 'Schedule with RideSnap', '#schedule', role: 'tab', data: {toggle: 'tab'}, class: 'btn btn-purple btn-wide btn-lg'
