- provide(:title, "#{@vehicle.make(pretty: true)} #{@vehicle.model(pretty: true)}")

.container{style: 'padding-top:90px'}
  .owl-carousel
    - @vehicle.images.each do |img|
      = image_tag img.try(:url), class: 'img-responsive three-four'

  - if admin?
    %br
    .text-center
      = s3_uploader_form post: vehicle_images_url(@vehicle), as: "image[url]", vin: @vehicle.vin do
        %span.btn.btn-purple.btn-file
          Add Images
          = file_field_tag :file, multiple: true
      %script{id: 'template-upload', type: 'text/x-tmpl'}
        .upload
          {%=o.name%}
          .progress
            .bar{style: 'width: 0%'}

  %hr.arrow

  %h1.text-center RVR BM3485
  .row
    .col-xs-12.col-sm-6.hoverable
      .overlay.text-center
        %p Mechanics Report
        %p
          Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
          %br
          = link_to 'click to view', '#'
      = image_tag 'blank.jpg', class: 'img-responsive'
    .col-xs-12.col-sm-6.hoverable
      .overlay.text-center
        %p Exteiror Report
        %p
          Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
          %br
          = link_to 'click to view', '#'
      = image_tag 'blank.jpg', class: 'img-responsive'
  .row
    .col-xs-12.col-sm-6.hoverable
      .overlay.text-center
        %p CarFax Report
        %p
          Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
          %br
          = link_to 'click to view', '#'
      = image_tag 'blank.jpg', class: 'img-responsive'
    .col-xs-12.col-sm-6.hoverable
      .overlay.text-center
        %p Value Summary
        %p
          Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
          %br
          = link_to 'click to view', '#'
      = image_tag 'blank.jpg', class: 'img-responsive'

  %br
  %br
  .row
    .col-md-7.col-md-offset-1
      %p Model: #{@vehicle.year} #{@vehicle.make(pretty: true)} #{@vehicle.model(pretty: true)}
      %p MPG: Up to 21 city, 29 highway
      %p Body style: Sedan
      %p Horsepower: 215 HP
      %p Torque: 185 lb-ft
      %p Engine size: 3.0L
      %p Trim: #{@vehicle.description}
    .col-md-3
      = render partial: 'vehicles/little_square', locals: {icon: 'star', caption: 'No Accidents'}
      = render partial: 'vehicles/little_square', locals: {icon: 'star', caption: 'Title in Hand'}
      = render partial: 'vehicles/little_square', locals: {icon: 'star', caption: 'Single Owner'}
      = render partial: 'vehicles/little_square', locals: {icon: 'star', caption: 'Bluetooth'}
      = render partial: 'vehicles/little_square', locals: {icon: 'star', caption: 'Sunroof'}
      = render partial: 'vehicles/little_square', locals: {icon: 'star', caption: 'Navigation'}

  %hr.arrow

  .text-center.form-inline
    %p
      Mechanical Inspection -
      %b.text-success EXCELLENT
    %br
    .form-group
      = button_tag 'DOWNLOAD REPORT', class: 'btn btn-success'
    .form-group
      = button_tag 'CHECK OUT THIS CAR', class: 'btn btn-grey'
    .form-group
      = link_to 'BUY THIS CAR!', buy_vehicle_path(@vehicle), class: 'btn btn-purple'

  %hr

  = render 'pages/story_icons'