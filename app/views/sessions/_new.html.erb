<div class='modal-header'>
  <button class='close' data-dismiss='modal' type='button'>
    <span aria-hidden='true'>&times;</span>
    <span class='sr-only'>Close</span>
  </button>
  <%= image_tag 'black_logo.png', class: 'modal-logo' %>
  <h4 class='modal-title'>Sign in</h4>
</div>
<%= form_for :session, url: sessions_path, html: { role: 'form', remote: true, data: {model: 'session'}} do |f| %>
  <div class='modal-body'>
    <div class='form-group'>
      <%= f.label :email, nil, class: 'sr-only' %>
      <%= f.text_field :email, class: 'form-control', placeholder: 'email address' %>
      <span class="help-block"></span>
    </div>
    <div class='form-group'>
      <%= f.label :password, nil, class: 'sr-only' %>
      <%= f.password_field :password, class: 'form-control', placeholder: 'Pa55w0rd' %>
      <span class="help-block"></span>
    </div>
  </div>
  <div class='modal-footer'>
    <%= link_to 'forgotten password?', '#password-reset', role: 'tab', data: {toggle: 'tab'}, class: 'btn btn-default pull-left clear-form' %>
    <%= link_to 'Sign up', '#sign-up', role: 'tab', data: {toggle: 'tab'}, class: 'btn btn-default btn-sm clear-form' %>
    <%= f.submit 'Sign in', class: 'btn btn-purple' %>
  </div>
<% end %>

